<!DOCTYPE html>
<html>
  <body>
    <!-- Page header -->
    <header class="page-header">
      <h1>Releases</h1>
    </header>

    <main>
      <div class="text-wrapper width-1026 center clearfix">
        <!-- Side Navigation -->
        <aside class="sidenav side-nav">
          <!-- Article links -->
          <ul style="padding-left:0; list-style-type:none">
            <!-- Category links -->
            {% assign categories = "website|book|gfx" | split: "|" %}
            {% assign temp = '' %}

            {% for sub in categories %}
                {% for post in posts %}
                   {% if post.category == sub %}
                      {% if temp != sub %}
                      <li><h4><a href=".{{ sub }}">{{ sub | capitalize }}</a></h4>
                      {% endif %}
                      {% assign temp = sub %}
                      <ul style="padding-left:1em; list-style-type:none">
                        <li class="{{ sub }} post-content"><h5><a href="/{{ post.path }}">{{ post.title }}</a></h5></li>
                      </ul>
                   {% endif %}
               {% endfor %}
            {% endfor %}
          </ul>
        </aside>
        <!-- Article -->
        <section>
          <!-- Thumbnail Article -->
          {% if videos != 'true' %}
            <div class="thumbnail-article-page">
              <img id="article-thumbnail" src="{{ thumbnail }}" alt="image"/>
            </div>
          {% else %}
            <iframe width="100%" height="386px"
              src=" https://www.youtube.com/embed/{{ video }}?autohide=1&modestbranding=1&showinfo=0&wmode=transparent&rel=0&fs=0" frameborder="0">
            </iframe>
          {% endif %}
            <div class="text-block" style="padding: 0">
            <!-- Title Article -->
            <h2 class="text-center" style="border: none; padding: 0; margin-bottom: 0">{{ title }}</h2>
            <!-- Date Article -->
            <div class="date-article center">Published on {{ date | date: "%e %b. %Y"}}</div>
            <hr>
            <article style="block">
              <!-- Contents Article -->
              {{ content }}
              <!-- Previous Article -->
              <!--
              {% if previous %}
              <div class="previous">
                <a href="{{ /previous.path }}"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Previous</a>
              </div>
              {% endif %}
              -->
              <!-- Next Article -->
              <!--
              {% if next %}
              <div class="next">
                <a href="{{ /next.path }}">Next <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></a>
              </div>
              {% endif %}
            -->
            </article>
          </div>
        </section>
      </div>
    </main>
  </body>
</html>
